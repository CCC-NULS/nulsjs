{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local",
    "build:rollup": "lerna exec -- rollup -c=../../rollup.config.js",
    "build:ts": "lerna exec -- tsc -p ./tsconfig.json",
    "build": "npm run clean:dist && concurrently \"npm run build:rollup\" \"npm run build:ts\"",
    "pwd": "lerna exec -- pwd",
    "watch:rollup": "lerna exec --parallel -- rollup -w -c=../../rollup.config.js",
    "watch:ts": "lerna exec --parallel -- tsc -w -p ./tsconfig.json",
    "watch": "concurrently \"npm run watch:rollup\" \"npm run watch:ts\"",
    "link": "lerna link --force-local",
    "link:npm": "lerna exec --concurrency 1 -- npm link",
    "build:prod": "export NODE_ENV=production && npm run build",
    "publish": "npm run build:prod && lerna publish",
    "publish:force": "npm run build:prod && lerna publish --force-publish=*",
    "dev": "npm run watch",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll=true",
    "test:ci": "npm run test -- --ci --watchAll=false --coverage",
    "lint": "eslint --ignore-path .gitignore './packages/**/src/**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix --quiet",
    "clean:dist": "find ./packages -type d -name 'dist' -maxdepth 2 -exec rm -rf '{}' +",
    "clean": "lerna clean && npm run clean:dist",
    "postinstall": "npm run bootstrap && npm run build",
    "restart": "npm run clean && npm run bootstrap && npm run link && npm run build && npm run dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run test:ci && npm run build"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^24.8.0",
    "concurrently": "^4.1.1",
    "config": "^3.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.6.0",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "prettier": "1.18.2",
    "rollup": "^1.15.6",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-config": "^1.3.0",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "rollup-plugin-yaml": "^1.1.0",
    "typescript": "^3.5.2"
  }
}
